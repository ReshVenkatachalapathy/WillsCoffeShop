<Window x:Class="WillsCoffeShop.admin_HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WillsCoffeShop"
        mc:Ignorable="d"
        Title="admin_HomePage" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome, User" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <TextBlock Text="Your dashboard view is below" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,30"/>
            <Button Content="Product Details" Width="200" Height="50" Margin="10" Click="ProductDetailsButton_Click"/>
            <Button Content="Payroll Details" Width="200" Height="50" Margin="10" Click="ReportDetailsButton_Click"/>
            <Button Content="Employee Details" Width="200" Height="50" Margin="10" Click="EmployeeDetailsButton_Click"/>
            <Button Content="Logout" Width="200" Height="50" Margin="10" Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
